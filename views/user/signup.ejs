<%- include('../layout/header') %>
<main class="login-page-body">
  <div class="login-model">
    <h2 class="signup-heading">Sign Up</h2>

    <form class="signup-form" action="" method="POST">
      <div class="signup-names">
        <div class="signup-input-div">
          <i class="fa-regular fa-user signup-icon"></i>
          <input
            class="signup-input"
            type="text"
            name="name"
            placeholder="Enter your name"
            required
          />
        </div>
      </div>

      <div class="signup-input-div">
        <i class="fa-solid fa-phone signup-icon"></i>
        <input
          class="signup-input"
          type="tel"
          name="phone"
          
          placeholder="Enter your phone number"
       
        />
      </div>

      <div class="signup-input-div">
        <i class="fa-regular fa-envelope signup-icon"></i>
        <input
          class="signup-input"
          type="email"
          name="email"
          placeholder="Enter your email id"
          required
        />
      </div>

      <div class="signup-input-div">
        <i class="fa-solid fa-lock signup-icon"></i>
        <input
          class="signup-input"
          type="password"
          name="password"
          placeholder="Enter your password"
          required
        />
      </div>

      <div class="signup-input-div">
        <i class="fa-solid fa-lock signup-icon"></i>
        <input
          class="signup-input"
          type="password"
          name="confirm-password"
          placeholder="Confirm your password"
          required
        />
      </div>
      <button class="signup-button" type="submit">Sign Up</button>
      <div class="seperator">
        <hr class="or-line" />
        <span class="or-text">or</span>
        <hr class="or-line" />
      </div>

      <div class="alternative-signup-div">
        <button class="alternative-signup-btn" type="submit">
      <img class="google-icon-img" src="/image/googleicon.png" alt="">
        </button>
        <button class="alternative-signup-btn" type="submit">
   <img class="fb-icon-img " src="/image/fb-icon.svg" alt="">
        </button>
      </div>
    </form>

    <% if(typeof message!= 'undefined'){%>
      <h6 style="color: rgb(249, 0, 0); margin-bottom: 30px"><%= message %></h2>
      <% } %>

   <div class="navigate">
     <a class="signup-navigate-link" href="/home">Home</a>
     <a class="signup-navigate-link" href="/login">Login</a>
    </div>


    </div>
</main>

<%- include('../layout/footer') %>



